@*  The view for the Property/AddEdit action. Displays the Add/Edit Property page *@
@model PropertyViewModel
@{
    string title = Model.Action + " Property";
    ViewBag.Title = title;
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row form-group">
        <label asp-for="Property.CustomerID" class="col-sm-3">Customer</label>
        <div class="col-sm-6">
            <select asp-for="Property.CustomerID"
                    asp-items="@(new SelectList(Model.Customers,
                         "CustomerID", "Name",
                         Model.Property.CustomerID.ToString()))"
                    class="form-control">
                <option value="">Select a customer...</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Property.CustomerID" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Property.PropertyAddress" class="col-sm-3">Property Address</label>
        <div class="col-sm-6">
            <input asp-for="Property.PropertyAddress" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.PropertyAddress" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Property.PropertyCity" class="col-sm-3">Property City</label>
        <div class="col-sm-6">
            <input asp-for="Property.PropertyCity" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.PropertyCity" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Property.PropertyState" class="col-sm-3">Property State</label>
        <div class="col-sm-6">
            <input asp-for="Property.PropertyState" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.PropertyState" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Property.PropertyZIP" class="col-sm-3">Property ZIP</label>
        <div class="col-sm-6">
            <input asp-for="Property.PropertyZIP" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.PropertyZIP" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Property.ServiceFee" class="col-sm-3">Service Fee</label>
        <div class="col-sm-6">
            <input asp-for="Property.ServiceFee" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.ServiceFee" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Property.PropertyID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
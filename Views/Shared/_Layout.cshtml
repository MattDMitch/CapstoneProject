@{
    string controller = ViewContext.RouteData.Values["controller"].ToString();
    string action = ViewContext.RouteData.Values["action"].ToString(); 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - JasperGreen</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom box-shadow mb-3">
            <div class="container">
                <div navbar-nav navbar-left>
                    <a asp-controller="Home" asp-action="Index">
                        <img id="logo" alt="Jasper Green logo" src="~/images/jasper-green-logo.png" width="110" height="110"
                            class="img-responsive logo" />
                    </a>
                </div>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="navbar-nav flex-grow-1 mr-auto">
                        <a class="nav-item nav-link @(controller == "Home" && action == "Index" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link @(controller == "Customer" ? "active" : "")"
                           asp-controller="Customer" asp-action="List">Customers</a>
                        <a class="nav-item nav-link @(controller == "Employee" ? "active" : "")"
                           asp-controller="Employee" asp-action="List">Employees</a>
                        <a class="nav-item nav-link @(controller == "Crew" ? "active" : "")"
                           asp-controller="Crew" asp-action="List">Crews</a>
                        <a class="nav-item nav-link @(controller == "Property" ? "active" : "")"
                           asp-controller="Property" asp-action="List">Properties</a>
                        <a class="nav-item nav-link @(controller == "Provided Service" ? "active" : "")"
                           asp-controller="ProvidedService" asp-action="List">Provided Services</a>
                        <a class="nav-item nav-link @(controller == "Payment" ? "active" : "")"
                           asp-controller="Payment" asp-action="List">Payments</a>
                    </div>

                    <div class="navbar-nav navbar-right">
                        <a class="nav-item nav-link @(controller == "About" && action == "About" ? "active" : "")"
                           asp-controller="Home" asp-action="About">About</a>
                        <a class="nav-item nav-link @(controller == "Home" && action == "Contact Us" ? "active" : "")"
                           asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                    </div>
                </nav>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData.Keys.Contains("message"))
            {
                //when user tries to delete a customer/employee/property/crew that has a relationship with another entity
                //when the user adds or updates customer
                <h2 class="h3 bg-info text-white text-center p-2 mt-1 rounded">@TempData["message"]</h2>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <center>
            &copy; JasperGreen - Nefarious Narwhals
        </center>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

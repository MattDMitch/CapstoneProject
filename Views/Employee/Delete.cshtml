@*  The view for the Employee/Delete action. Displays a Delete Employee page that confirms the deletion. *@
@model Employee
@{
    ViewBag.Title = "Delete Employee";
}

<div class="jumbotron alert-danger mt-4">
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete '@Model.EmployeeFullName'?</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EmployeeID" />

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </form>
</div>

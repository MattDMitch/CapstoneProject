@*  The view for the Provided Service/Delete action. Displays a Delete Provided service page that confirms the deletion. *@
@model ProvidedService
@{
    ViewBag.Title = "Delete Payment";
}

<div class="jumbotron alert-danger mt-4">
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete the provided service '@Model.ProvidedServiceID'?</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProvidedServiceID" />

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </form>
</div>

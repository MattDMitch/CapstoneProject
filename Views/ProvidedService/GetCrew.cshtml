@*  The view for the Get Crew action for filtering. Displays the Get Crew page *@
@model Crew
@{
    string title = ViewBag.Action + " Get Crew";
    ViewBag.Title = title;
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="GetCrew" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <label asp-for="CrewID" class="col-sm-3">Crew</label>
        <div class="col-sm-6">
            <select asp-for="CrewID"
                    asp-items="@(new SelectList(ViewBag.Crews,
                         "CrewID", "CrewID",
                         Model.CrewID.ToString()))"
                    class="form-control">
                <option value="">Select a crew...</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="CrewID" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Select</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
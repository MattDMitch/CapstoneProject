@*  The view for the Payment/List action. Displays a list of all payments. *@
@model PaymentViewModel
@{
    ViewBag.Title = "Payment Manager";
}

<h1>Payment Manager</h1>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Payment Date</th>
            <th>Payment Amount</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model.Payments)
        {
            <tr>
                <td>@payment.Customer.Name</td>
                <td>@payment.PaymentDate.ToShortDateString()</td>
                <td>@payment.PaymentAmount.ToString("C2")</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@payment.PaymentID"
                       class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete"
                       asp-route-id="@payment.PaymentID"
                       class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary mb-2">Add Payment</a>

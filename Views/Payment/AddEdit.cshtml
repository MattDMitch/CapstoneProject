@*  The view for the Payment/AddEdit action. Displays the Add/Edit Payment page *@
@model PaymentViewModel
@{
    string title = Model.Action + " Payment";
    ViewBag.Title = title;
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row form-group">
        <label asp-for="Payment.CustomerID" class="col-sm-3">Customer</label>
        <div class="col-sm-6">
            <select asp-for="Payment.CustomerID"
                    asp-items="@(new SelectList(Model.Customers,
                         "CustomerID", "Name",
                         Model.Payment.CustomerID.ToString()))"
                    class="form-control">
                <option value="">Select a customer...</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Payment.CustomerID" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Payment.PaymentDate" class="col-sm-3">Payment Date</label>
        <div class="col-sm-6">
            <input asp-for="Payment.PaymentDate" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Payment.PaymentAmount" class="col-sm-3">Payment Amount</label>
        <div class="col-sm-6">
            <input asp-for="Payment.PaymentAmount" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Payment.PaymentAmount" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Payment.PaymentID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>